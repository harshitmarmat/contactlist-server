<html>
    <head>
        <title>My contact list</title>
        <script src="https://kit.fontawesome.com/a69472f5a6.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>

        <div class="outer-div">

            <div class="head-section">
                <h1 id="main-heading"><i class="far fa-address-book"></i>My Contact List</h1>
            </div>
            
            <div class="display">
                <ul class=" column">
                    <% for (let i of contact_List){%>
                    
                        <li class="screen-item centre">
                            <p class="inline"><%= i.name%></p>
                            
                            <p class="inline"><%= i.phone%></p>
                            <a href="/delete-contact/?id=<%=i.id%>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </li>
                    
                    <%}%>
                </ul>
            </div>

            <div class="form-section">
                <form  action="/create-contact" method="POST">
                    <input type="text"  name="name" placeholder="Name" required>
                    <input type="number" name="phone" placeholder="Phone" required>
                    
                    <button type="submit">Add</button>
                </form>
            
                <!-- <form action="/update" method="POST">
                    <input type="text"  name="name" placeholder="Name" required>
                    <input type="number" name="phone" placeholder="Phone" required>
                    <button type="submit">Update</button>
                </form> -->
            </div>

        </div>    

        <script type="text/javascript" src="/js/home.js"></script>

    </body>
</html>